    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/umairabbasDev/uutils.git"
  },
  "author": "umairabbasDev",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/umairabbasDev/uutils/issues"
  },
  "homepage": "https://github.com/umairabbasDev/uutils#readme",
  "devDependencies": {
    "@types/jest": "^29.5.1",
    "jest": "^29.5.0",
    "prettier": "^2.8.8",
    "ts-jest": "^29.1.0",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^5.0.4"
  },
  "files": [
    "lib/**/*"
  ]
